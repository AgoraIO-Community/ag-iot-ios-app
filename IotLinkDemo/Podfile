  pod 'MJRefresh','3.7.5'
  pod 'AgoraIotLink',:path=>'../'
  pod 'DZNEmptyDataSet','1.8.1'
  pod 'SVProgressHUD','2.2.5'
  pod 'Kingfisher', '7.4.0'
  pod 'YYKit','1.0.9'
  pod 'JXSegmentedView','1.3.0'
  pod 'SwiftDate','6.3.1'
  pod 'ZLPhotoBrowser','4.3.1'
  pod 'SwiftyRSA','1.7.0'
  pod 'CocoaMQTT'
  
  #--------SJVideoPlayer播放器--------
